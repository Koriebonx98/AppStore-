<Window x:Class="GitHub_Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitHub_Store"
        mc:Ignorable="d"
        Title="GitHub Store" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="False">
    <Window.Resources>
        <Style x:Key="AppBoxStyle" TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#888" BlurRadius="10" ShadowDepth="2" />
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Width" Value="220" />
            <Setter Property="Height" Value="320" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D7" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#0078D7" BlurRadius="15" ShadowDepth="4" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="StoreButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D7" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderBrush" Value="#0078D7" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="10,15,10,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel>
        <!-- Navigation Bar -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#0078D7" Height="48" VerticalAlignment="Top">
            <TextBlock Text="GitHub Store" Foreground="White" FontWeight="Bold" FontSize="22" Margin="20,0,30,0" VerticalAlignment="Center" />
            <!-- Add more nav items here if needed -->
            <Grid Width="300" Height="28" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBox x:Name="SearchBox" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="8,2" FontSize="15" TextChanged="SearchBox_TextChanged"/>
                <TextBlock x:Name="SearchPlaceholder" Text="Search apps..." Foreground="#888" FontSize="15" Padding="12,2,0,0" IsHitTestVisible="False" VerticalAlignment="Center" Visibility="Visible"/>
            </Grid>
        </StackPanel>
        <!-- Filter Bar -->
        <StackPanel x:Name="FilterBar" Orientation="Vertical" DockPanel.Dock="Top" Background="#F5F5F5" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                <TextBlock Text="Filter by:" FontWeight="Bold" FontSize="15" Margin="0,0,12,0" VerticalAlignment="Center" />
                <Button x:Name="RefreshButton" Content="Refresh" Height="28" MinWidth="80" Margin="0,0,0,0" Click="RefreshButton_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Platform:" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <WrapPanel x:Name="PlatformFilterPanel" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="Genre:" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <WrapPanel x:Name="GenreFilterPanel" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Type:" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <WrapPanel x:Name="TypeFilterPanel" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="AppsGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Margin="20" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource AppBoxStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Viewbox Grid.Row="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Height="140">
                                    <Image Source="{Binding Image}" Stretch="Uniform" />
                                </Viewbox>
                                <TextBlock Grid.Row="1" Text="{Binding Name}" FontWeight="Bold" FontSize="16" Margin="5,10,5,0" TextAlignment="Center" HorizontalAlignment="Center" />
                                <TextBlock Grid.Row="2" Text="{Binding Genre}" FontSize="14" Foreground="DarkGray" Margin="5,0,5,0" TextAlignment="Center" HorizontalAlignment="Center" />
                                <Button Grid.Row="3" Content="View" CommandParameter="{Binding}" Click="AppBox_Click" Style="{StaticResource StoreButtonStyle}" HorizontalAlignment="Stretch" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
